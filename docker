# Temel imaj olarak Ubuntu kullanıyoruz
FROM ubuntu:22.04

# Gerekli paketleri yükleyin
RUN apt-get update && apt-get install -y \
    build-essential \
    git \
    make \
    gcc \
    curl

# Reponuzu kopyalayın
WORKDIR /app
COPY . /app

# Gerekli kütüphaneleri yükleyin
RUN make

# Varsayılan komutu belirtin
CMD ["./ozripper"]
